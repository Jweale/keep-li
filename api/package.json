  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240909.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "typescript": "^5.4.0",
    "wrangler": "^3.65.1"
  }
